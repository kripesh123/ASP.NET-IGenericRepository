
@model Kripesh.MVC.Application.Models.Category

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m=> m.CategoryName)
        @Html.TextAreaFor(m=> m.CategoryName, new { @class="form-control" , @id="category_name"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Item)
        @Html.TextAreaFor(m => m.Item, new { @class = "form-control", @id = "category_item" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Details)
        @Html.TextAreaFor(m => m.Details, new { @class = "form-control", @id = "category_details" })
    </div>
    <div class="checkbox">
        @Html.LabelFor(m=> m.Status)
        @Html.CheckBoxFor(m=> m.Status)
    </div>
    <button type="submit" class="btn btn-success btn-xs"><span class="glyphicon"></span>Update</button>
    <button type="submit" class="btn btn-danger btn-xs">Cancel</button>

}

